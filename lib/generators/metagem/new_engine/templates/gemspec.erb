$:.push File.expand_path("lib", __dir__)

Gem::Specification.new do |spec|
  spec.name = "<%= @config.gem_name %>"
  spec.version = "0.1.0"
  spec.authors = "Platanus"
  spec.email = "rubygems@platan.us"
  spec.summary = "<%= @config.summary %>"
  spec.description = "<%= @config.description %>"

  spec.metadata["allowed_push_host"] = "https://platan.us"

  spec.files = Dir["{app,config,db,lib}/**/*", "README.md"]

  spec.add_dependency "power-types"
  spec.add_dependency "rails", "<%= Rails.version %>"
end
